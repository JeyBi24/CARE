<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e05297">


    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/setup_notification"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintBottom_toTopOf="@id/rvGiveAccess"
        android:text="Please enable Access to 'CARE', so we can show and control notifications on your brand new Awesome Caring LockScreen."
        android:textColor="@color/white"
        android:fontFamily="@font/g_black"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginRight="24sp"
        android:layout_marginLeft="24sp"
        />

    <RelativeLayout
        android:id="@+id/rvGiveAccess"
        android:layout_width="0dp"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/btn_setup"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="ENABLE ACCESS"
            android:layout_centerInParent="true"
            android:fontFamily="@font/g_bold"
            android:textSize="20sp"
            />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>